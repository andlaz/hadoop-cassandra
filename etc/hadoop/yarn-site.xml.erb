<?xml version="1.0"?>
<configuration>
	<!-- Node Manager daemon -->
	<property>
		<name>yarn.resourcemanager.hostname</name>
		<value><%= @host_resource_manager %></value>
	</property>
	<property>
		<name>yarn.nodemanager.resource.memory-mb</name>
		<value><%= @node_containers_heap_total %></value>
	</property>
	<property>
		<name>yarn.nodemanager.webapp.address</name>
		<value><%= @web_ui_host%>:<%= @web_ui_port%></value>
	</property>
</configuration>